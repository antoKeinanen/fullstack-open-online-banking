{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "generate-protobuf": {
      "outputs": [
        "gen/**"
      ],
      "inputs": [
        "**/*.proto",
        "buf.yaml",
        "buf.gen.yaml"
      ]
    },
    "dev": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env"
      ],
      "dependsOn": [
        "^generate-protobuf"
      ],
      "env": [
        "TIGERBEETLE_SERVICE_PORT",
        "TIGERBEETLE_ADDRESS",
        "PAYMENT_SERVICE_PORT",
        "PAYMENT_SERVICE_TIGERBEETLE_SERVICE_URL",
        "USER_SERVICE_PORT",
        "USER_SERVICE_TIGERBEETLE_SERVICE_URL",
        "USER_SERVICE_DATABASE_DSN",
        "USER_SERVICE_JWT_SECRET",
        "USER_BFF_PORT",
        "USER_BFF_USER_SERVICE_URL",
        "VITE_PUBLIC_USER_CLIENT_USER_BFF_URL",
        "NODE_ENV",
        "USER_BFF_JWT_SECRET",
        "USER_BFF_PAYMENT_SERVICE_URL",
        "USER_BFF_REDIS_CONNECTION_STRING",
        "USER_BFF_STRIPE_SUCCESS_ENDPOINT",
        "USER_BFF_STRIPE_SECRET_KEY",
        "USER_BFF_STRIPE_WEBHOOK_SECRET",
        "USER_BFF_STRIPE_SERVICE_URL",
        "STRIPE_SERVICE_PORT",
        "STRIPE_SERVICE_TIGERBEETLE_SERVICE_URL",
        "STRIPE_SERVICE_DATABASE_DSN",
        "USER_BFF_OTEL_EXPORTER_OTLP_ENDPOINT",
        "USER_SERVICE_OTEL_EXPORTER_OTLP_ENDPOINT"
      ],
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "build": {
      "dependsOn": [
        "^generate-protobuf",
        "^build"
      ],
      "cache": false
    },
    "format": {
      "cache": false,
      "dependsOn": [
        "^generate-protobuf"
      ]
    },
    "format:fix": {
      "cache": false,
      "dependsOn": [
        "^generate-protobuf"
      ]
    },
    "lint": {
      "cache": false,
      "dependsOn": [
        "^generate-protobuf"
      ]
    },
    "lint:fix": {
      "cache": false,
      "dependsOn": [
        "^generate-protobuf"
      ]
    },
    "typecheck": {
      "outputs": [
        ".cache/tsbuildinfo.json"
      ],
      "dependsOn": [
        "^generate-protobuf"
      ],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "generate-keys": {
      "cache": false,
      "env": [
        "OP_KEYGEN_CERTIFICATE_API_URL",
        "OP_KEYGEN_COMMON_NAME",
        "OP_KEYGEN_API_KEY",
        "OP_KEYGEN_COUNTRY",
        "OP_KEYGEN_ROLES",
        "OP_KEYGEN_PRIVATE_JWKS_PATH"
      ]
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  }
}