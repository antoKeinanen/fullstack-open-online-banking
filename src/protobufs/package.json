{
  "name": "@repo/protobufs",
  "exports": {
    ".": {
      "user-service": "./user-service.proto"
    }
  },
  "scripts": {
    "generate-protobuf": "mkdir -p ./generated/go/{tigerbeetle,user} && pnpm run \"/generate-protobuf:.*/\"",
    "generate-protobuf:tigerbeetle": "protoc --go_out=generated/go/tigerbeetle --go_opt=paths=source_relative --go-grpc_out=generated/go/tigerbeetle --go-grpc_opt=paths=source_relative tigerbeetle-service.proto",
    "generate-protobuf:user": "protoc --go_out=generated/go/user --go_opt=paths=source_relative --go-grpc_out=generated/go/user --go-grpc_opt=paths=source_relative user-service.proto",
    "install": "go mod tidy"
  }
}